#!/usr/bin/env ruby

require 'bundler/setup'
require 'justimmo'
require 'dotenv'

Dotenv.load

Justimmo.configure do |config|
  config.username = ENV['JUSTIMMO_USERNAME']
  config.password = ENV['JUSTIMMO_PASSWORD']

  config.debug = ENV['DEBUG']

  config.on_mapper_error = ENV['JUSTIMMO_MAPPER_ERROR']&.to_sym || :raise
end

begin
    require 'pry'
    Pry.start
rescue LoadError
    require 'irb'
    IRB.start(__FILE__)
end
