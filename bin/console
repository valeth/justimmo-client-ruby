#!/usr/bin/env ruby

require "bundler/setup"
require "justimmo_client"
require "dotenv"

Dotenv.load

JustimmoClient.configure do |config|
  config.username = ENV['JUSTIMMO_USERNAME']
  config.password = ENV['JUSTIMMO_PASSWORD']
  config.debug    = ENV['DEBUG']
end

begin
    require 'pry'
    Pry.start
rescue LoadError
    require 'irb'
    IRB.start(__FILE__)
end
